<!-- Related Section Begin -->
<section class="related spad">
	<div class="container">
		<div class="row">
			<div class="col-lg-12">
				<h3 class="related-title">Related Product</h3>
			</div>
		</div>
		<div class="row">
			@foreach (Product product in Model.RelatedProducts)
			{
				<div class="col-lg-3 col-md-6 col-sm-6 col-sm-6">
					<div class="product__item">
						<div class="product__item__pic set-bg">
							<span><img src="~/img/product/@product.ProductImages.FirstOrDefault(pi=>pi.IsPrimary==true).Url " /></span>

						</div>
						<div class="product__item__text">
							<a class="h6 text-decoration-none text-truncate" asp-action="Detail" asp-controller="Home" asp-route-id="@product.Id">@product.Name</a><br>
							<div class="rating">
								<i class="fa fa-star-o"></i>
								<i class="fa fa-star-o"></i>
								<i class="fa fa-star-o"></i>
								<i class="fa fa-star-o"></i>
								<i class="fa fa-star-o"></i>
							</div>
							<h5>$@product.Price</h5>
							<h6 class="text-muted ml-2">
								<del>@(product.OldPrice != null ? $"${product.OldPrice}" : "")</del>
							</h6>

						</div>
					</div>
				</div>
			}

		</div>
	</div>
</section>
<!-- Related Section End -->