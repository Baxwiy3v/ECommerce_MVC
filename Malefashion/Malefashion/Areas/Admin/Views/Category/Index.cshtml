﻿
@model PaginationVM<Category>
@{

	int count = Model.CurrentPage * 3;
}

<div class="col-lg-12 grid-margin stretch-card">
	<div class="card">
		<div class="card-body">
			<a class="btn btn-inverse-success " asp-controller="Category" asp-action="Create">Create Category</a>
			<div class="table-responsive">
				<table class="table">
					<thead>
						<tr>
							<th>
								No
							</th>

							<th>
								Name
							</th>
							<th>
								ProductCount
							</th>
							<th>
								Settings
							</th>
						</tr>
					</thead>
					<tbody>
						@foreach (Category category in Model.Items)
						{
							count++;
							<tr>
								<td>
									@count
								</td>

								<td>
									@category.Name
								</td>
								<td>
									@category.Products.Count
								</td>
								<td>
									<a asp-action="Update" asp-route-id="@category.Id" class="btn btn-inverse-warning"> <i class="mdi mdi-pencil"></i> </a>
									<a asp-action="Delete" asp-route-id="@category.Id" class="btn btn-inverse-danger"> <i class="mdi mdi-delete"></i> </a>

								</td>
							</tr>


						}

					</tbody>
				</table>
			</div>

		</div>

		<nav aria-label="Page navigation example" style="margin: auto; width: 40%;">
			<ul class="pagination">

				<li class="page-item @(Model.CurrentPage==0?"disabled":"")"><a class="page-link" asp-route-page="@(Model.CurrentPage-1)" asp-action="Index" asp-controller="Category">Previous</a></li>
				@for (int i = 0; i < Model.TotalPage; i++)

				{
					<li class="page-item @(i==Model.CurrentPage?"disabled":"")"><a class="page-link" asp-route-page="@(i)" asp-action="Index" asp-controller="Category">@(i + 1)</a></li>
				}

				<li class="page-item @(Model.CurrentPage==Model.TotalPage-1?"disabled":"")"><a class="page-link" asp-route-page="@(Model.CurrentPage+1)" asp-action="Index" asp-controller="Category">Next</a></li>
			</ul>
		</nav>

	</div>
</div>