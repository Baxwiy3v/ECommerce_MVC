@model PaginationVM<Order>
@{

    int count = Model.CurrentPage * 3;
}

<div class="col-lg-12 grid-margin stretch-card">
	<div class="card">
		<div class="card-body">
			<div class="table-responsive">
				<table class="table">
					<thead>

                        <tr>
                            <th>
                                Status
                            </th>
                            <th>
                                Address
                            </th>
                            <th>
                                Total Price
                            </th>
                            <th>
                                Purchase At
                            </th>
                            <th></th>
                        </tr>

					</thead>
					<tbody>
                        @foreach (var item in Model.Items)
                        {
                            <tr>
                                <td style="color: @(item.Status.HasValue ? (item.Status.Value ? "green" : "red") : "black")">
                                    @(item.Status.HasValue ? (item.Status.Value ? "Tamamlandı" : "Legv edildi") : "Gozlemede")
                                </td>

                                <td>
                                    @item.Address
                                </td>
                                <td>
                                    @item.TotalPrice
                                </td>
                                <td>
                                    @item.PurchaseAt
                                </td>
                                <td>
                                    
                                    <a asp-action="Update" asp-route-id="@item.Id" class="btn btn-inverse-warning"> <i class="mdi mdi-pencil"></i></a>
                                    <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-inverse-primary"><i class="mdi mdi-open-in-new"></i></a>
                                </td>
                            </tr>
                        }

					</tbody>
				</table>
			</div>

		</div>
        <nav aria-label="Page navigation example" style="margin: auto; width: 40%;">
            <ul class="pagination">

                <li class="page-item @(Model.CurrentPage==0?"disabled":"")"><a class="page-link" asp-route-page="@(Model.CurrentPage-1)" asp-action="Index" asp-controller="Order">Previous</a></li>
                @for (int i = 0; i < Model.TotalPage; i++)

                {
                    <li class="page-item @(i==Model.CurrentPage?"disabled":"")"><a class="page-link" asp-route-page="@(i)" asp-action="Index" asp-controller="Order">@(i + 1)</a></li>
                }

                <li class="page-item @(Model.CurrentPage==Model.TotalPage-1?"disabled":"")"><a class="page-link" asp-route-page="@(Model.CurrentPage+1)" asp-action="Index" asp-controller="Order">Next</a></li>
            </ul>
        </nav>

	</div>
</div>






