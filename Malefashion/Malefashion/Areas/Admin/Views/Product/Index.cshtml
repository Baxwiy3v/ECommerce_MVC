@model PaginationVM<Product>
@{

    int count = Model.CurrentPage * 3;
}

<div class="main-panel">
    <div class="content-wrapper">
        <div class="col-lg-12 grid-margin stretch-card">
            <div class="card">
                <div class="card-body">
                 
                    <a class="btn btn-inverse-success" asp-controller="Product" asp-action="Create">Create Product</a>
                    <div class="table-responsive">
                        <table class="table table-striped">
                            <thead>
                                <tr>
                                    <th>
                                        No
                                    </th>
                                    <th>
                                        Image
                                    </th>
                                    <th>
                                        Name
                                    </th>
                                    <th>
                                        Price
                                    </th>
                                    <th>
                                        Category
                                    </th>
                                    <th>
                                        Settings
                                    </th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (Product product in Model.Items)
                                {
                                    count++;
                                    <tr>
                                        <td>
                                            @count
                                        </td>
                                        <td>
                                            <img style="width:150px; height:150px;" src="~/img/product/@product.ProductImages.FirstOrDefault(pi=>pi.IsPrimary==true)?.Url" />
                                        </td>
                                        <td>
                                            @product.Name
                                        </td>
                                        <td>
                                            @product.Price
                                        </td>
                                        <td>
                                            @product.Category.Name
                                        </td>
                                        <td>
                                            <a asp-action="Update" asp-route-id="@product.Id" class="btn btn-inverse-warning"> <i class="mdi mdi-pencil"></i> </a>
                                            <a asp-action="Delete" asp-route-id="@product.Id" class="btn btn-inverse-danger"> <i class="mdi mdi-delete"></i> </a>
                                          
                                        </td>
                                    </tr>


                                }

                            </tbody>
                        </table>
                    </div>
                </div>
                <nav aria-label="Page navigation example" style="margin: auto; width: 40%;">
                    <ul class="pagination">

                        <li class="page-item @(Model.CurrentPage==0?"disabled":"")"><a class="page-link" asp-route-page="@(Model.CurrentPage-1)" asp-action="Index" asp-controller="Product">Previous</a></li>
                        @for (int i = 0; i < Model.TotalPage; i++)

                        {
                            <li class="page-item @(i==Model.CurrentPage?"disabled":"")"><a class="page-link" asp-route-page="@(i)" asp-action="Index" asp-controller="Product">@(i + 1)</a></li>
                        }

                        <li class="page-item @(Model.CurrentPage==Model.TotalPage-1?"disabled":"")"><a class="page-link" asp-route-page="@(Model.CurrentPage+1)" asp-action="Index" asp-controller="Product">Next</a></li>
                    </ul>
                </nav>
            </div>
        </div>
    </div>
</div>
