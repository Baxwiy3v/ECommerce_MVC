    <h3>Bu rəngi silmək istədiyinizə əminsiniz?</h3>
    <input type="hidden" asp-for="@Model.Id" />
    <input type="hidden" name="confirim" value="true" />
    <input type="submit" value="Yes" class="l btn btn-success" />
    <a asp-action="Index" asp-controller="Tag" class=" btn btn-danger">No</a>
</form>


