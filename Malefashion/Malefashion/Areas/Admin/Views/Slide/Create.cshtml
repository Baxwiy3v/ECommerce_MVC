@model CreateSlideVM
<div class="content-wrapper">
	<div class="row">
		<div class="col-lg-12 grid-margin stretch-card">
			<div class="card">
				<div class="card-body">
					<form class="forms-sample" method="post" enctype="multipart/form-data">
						<div class="form-group">
							<label asp-for="Photo">Photo</label>
							<input accept="image/*" asp-for="Photo" class="form-control" id="Photo" placeholder="Photo">
							<span class="text-danger" asp-validation-for="Photo"></span>
						</div>
						<div class="form-group">
							<label asp-for="Title">Title</label>
							<input asp-for="Title" class="form-control" id="Title" placeholder="Title">
							<span class="text-danger" asp-validation-for="Title"></span>
						</div>
						<div class="form-group">
							<label asp-for="SubTitle">SubTitle</label>
							<input asp-for="SubTitle" class="form-control" id="SubTitle" placeholder="SubTitle">
							<span class="text-danger" asp-validation-for="SubTitle"></span>
						</div>
						<div class="form-group">
							<label asp-for="Order">Order</label>
							<input asp-for="Order" class="form-control" id="Order" placeholder="Order">
							<span class="text-danger" asp-validation-for="Order"></span>
						</div>
						<div class="form-group">
							<label asp-for="Description">Description</label>
							<input asp-for="Description" class="form-control" id="name" placeholder="Description">
							<span class="text-danger" asp-validation-for="Description"></span>
						</div>
						<div class="form-group">
							<label asp-for="ButtonTitle">Button title</label>
							<input asp-for="ButtonTitle" class="form-control" id="Button title" placeholder="Button title">
							<span class="text-danger" asp-validation-for="ButtonTitle"></span>
						</div>
						<div class="form-group">
							<label asp-for="FbLink"> FbLink</label>
							<input asp-for="FbLink" class="form-control" id="FbLink" placeholder=" FbLink">
							<span class="text-danger" asp-validation-for="FbLink"></span>
						</div>
						<div class="form-group">
							<label asp-for="IgLink"> IgLink</label>
							<input asp-for="IgLink" class="form-control" id="IgLink" placeholder="IgLink ">
							<span class="text-danger" asp-validation-for="IgLink"></span>
						</div>
						<div class="form-group">
							<label asp-for="PtLink"> PtLink</label>
							<input asp-for="PtLink" class="form-control" id="name" placeholder="PtLink ">
							<span class="text-danger" asp-validation-for="PtLink"></span>
						</div>
						<div class="form-group">
							<label asp-for="TwLink">TwLink </label>
							<input asp-for="TwLink" class="form-control" id="TwLink" placeholder="TwLink ">
							<span class="text-danger" asp-validation-for="TwLink"></span>
						</div>
					
						<button type="submit" class="btn btn-primary me-2">Submit</button>
						<a asp-action="Index" class="btn btn-light">Cancel</a>
					</form>
				</div>
			</div>
		</div>
	</div>
</div>
