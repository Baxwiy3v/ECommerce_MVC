@model UpdateTeamVM
<div class="content-wrapper">
	<div class="row">
		<div class="col-lg-12 grid-margin stretch-card">
			<div class="card">
				<div class="card-body">
					<form class="forms-sample" method="post" enctype="multipart/form-data">
						<div class="form-group">
							<img style="width:150px;height:150px;" src="~/img/about/@Model.ImageUrl" />
							<input asp-for="ImageUrl" type="hidden" class="form-control" id="Photo">
						</div>
						<div class="form-group">
							<label asp-for="Photo">Photo</label>
							<input asp-for="Photo" class="form-control" id="Photo" placeholder="Photo">
							<span class="text-danger" asp-validation-for="Photo"></span>
						</div>
						<div class="form-group">
							<label asp-for="Name">Name</label>
							<input asp-for="Name" class="form-control" id="Name" placeholder="Name">
							<span class="text-danger" asp-validation-for="Name"></span>
						</div>

						<div class="form-group">
							<label asp-for="DepartmentId">Department</label>
							<select asp-for="DepartmentId" asp-items="new SelectList(Model.Departments,nameof(Department.Id),nameof(Department.Name))" class="form-control">
								<option selected disabled>Choose Department</option>
							</select>
							<span class="text-danger" asp-validation-for="DepartmentId"></span>
						</div>

						<button type="submit" class="btn btn-primary me-2">Submit</button>
						<a asp-action="Index" class="btn btn-light">Cancel</a>
					</form>
				</div>
			</div>
		</div>
	</div>
</div>
